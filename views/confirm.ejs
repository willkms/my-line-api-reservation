<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LIFF Handson</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
  <div class="container">
    <h1>LIFF EXAMPLE VIEW EJS</h1>

    <p>
      入力情報の確認
    </p>

    <form>
      <input type="text" name="name" value=<%= name %>>
      <input type="email" name="email" value=<%= email %>>
      <input type="tel" name="tel" value=<%= tel %>>
      <input type="date" name="date" value=<%= date %>>
      <input type="text" name="time" value=<%= time %>>
      <input type="submit" value="送信する">
    </form>

  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <!-- LIFF SDK の読み込み -->
  <script charset="utf-8" src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
  <!-- LIFF Setup -->
    <script>
      $(document).ready(function () {
            const liffId = "1661034918-8pzaYWXE";
            initializeLiff(liffId);
        })

        function initializeLiff(liffId) {
            liff.init({
                liffId: liffId
            }).then(() => {
                initializeApp();
            }).catch((err) => {
                console.log('LIFF Initialization failed ', err);
            });
        }

        function sendText(text) {
            liff.sendMessages([{
                'type': 'text',
                'text': text
            }]).then(function () {
                liff.closeWindow();
            }).catch(function (error) {
                window.alert('Failed to send message ' + error);
            });
        }

        const params = (new URL(document.location)).searchParams;
        const key = params.get('key');

        $(function () {
            $('form').submit(function () {
                const name    = $('input[name="name"]').val();
                const email = $('input[name="email"]').val();
                const tel = $('input[name="tel"]').val();
                const date = $('input[name="date"]').val();
                const time = $('input[name="time"]').val();
                const msg = `${name}\n${email}\n${tel}\n${date}\n${time}`;
                sendText(msg);

                (async function () {
                    const SpreadSheetService = require('../spreadSheetService.js')

                    await SpreadSheet.selectMaxID(2)
                    .then(data => data + 1)
                    .then(data => SpreadSheet.insert(2, {id:data, name:name, email:email, tel:tel, date:date, time:time}))
                }())

                return false;
            });
        });

    </script>
</body>
</html>